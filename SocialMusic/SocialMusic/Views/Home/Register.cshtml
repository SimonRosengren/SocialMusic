@model SocialMusic.Models.User

<div class="logInBox">
    @using (Html.BeginForm())
    {
        <p class="siteLogo">Social<strong>Music</strong></p>
        <br />
        @Html.EditorFor(s => s.Username, new { htmlAttributes = new { placeholder = "Username" } });
        <br />
        @Html.EditorFor(s => s.LastFmUsername, new { htmlAttributes = new { placeholder = "LasFM Name" } });
        <br />
        @Html.PasswordFor(s => s.Password, new { @class = "form-control", placeholder = "Password" });
        <br />
        <button type="submit" class="logInButton">Register</button>
    }
</div>

