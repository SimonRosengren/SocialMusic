<div class="wallBox">
    <p class="siteLogo">W<strong>all</strong></p>
    <div class="scrollDiv">
        <ul class="wallList" id="newMessages"></ul>
        <ul class="wallList" id="wallList">
            @for (int i = Model.Length - 1; i > 0; i--)
            {
                <li>@Model[i].Message</li>
            }
        </ul>
    </div>
    <form id="message">
        <input type="text" id="input" />
        <br />
        <button type="submit" id="postButton" class="logInButton">Post</button>
    </form>
</div>